<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="MetroPage" TargetType="{x:Type Page}">
    <Setter Property="TextElement.FontSize" Value="{DynamicResource ContentFontSize}" />
    <Setter Property="Page.Background" Value="{DynamicResource WhiteBrush}" />
    <Setter Property="Page.Foreground" Value="{DynamicResource BlackBrush}" />
  </Style>
</ResourceDictionary>